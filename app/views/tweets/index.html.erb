<div class="d-flex align-items-center justify-content-between">
    <h1>Tweets</h1>

    <% if Current.user.twitter_accounts.any? %>
        <%= link_to "New Tweet", new_tweet_path, class: "btn btn-primary" %>    
    <% end %>
</div>

<% if Current.user.twitter_accounts.none? %>
    <%= button_to "Link your X Account", "/auth/twitter", method: :post, data: { "turbo": false }, class: "btn btn-primary" %>
<% end %>

<%= render @tweets %>