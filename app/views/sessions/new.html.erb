<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "gavin@hooli.com" %>
    </div>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "PiedPiper@123" %>
        <%= link_to "Forgot your password?", password_reset_path, class: "link-offset-2" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Sign in!", class: "btn btn-primary" %>
    </div>
<% end %>