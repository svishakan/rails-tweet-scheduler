<div class="d-flex align-items-center justify-content-between">
    <h1>X Accounts</h1>
    <%= button_to "Link another X account", "/auth/twitter", method: :post, data: { "turbo": false }, class: "btn btn-primary" %>
</div>




<% @twitter_accounts.each do |twitter_account| %>
    <div class="d-flex align-items-center mb-4">
    <div class="me-4">
        <%= image_tag(twitter_account.image, class: "rounded-circle") %>
        <%= link_to "@#{twitter_account.username}", "https://x.com/#{twitter_account.username}", target: :_blank %>
    </div>

    <!-- ActiveRecord magic, 'twitter_account' is the instance of the model, figures out the path -->
    <%= button_to "Disconnect account", twitter_account, method: :delete, class: "btn btn-danger" %>
<% end %>
        