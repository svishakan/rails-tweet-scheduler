<h1>Edit Passworrd</h1>

<%= form_with model: Current.user, url: edit_password_path do |form| %>
    <%= render partial: "layouts/shared/form_errors", locals: { form: form } %>

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "PiedPiper@123" %>
    </div>
    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "form-control", placeholder: "PiedPiper@123" %>
    </div>
    <div class="mb-3">
        <%= form.submit "Update Password", class: "btn btn-primary" %>
    </div>
<% end %>